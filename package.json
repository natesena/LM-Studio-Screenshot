{
  "name": "screenshot-sender",
  "version": "1.0.0",
  "description": "Take screenshots on macOS and send to a local server.",
  "main": "main.js",
  "scripts": {
    "start-server": "node server.js",
    "send-screenshot": "node screenshot-send.js",
    "start": "concurrently -k \"npm:react-dev\" \"npm:electron-dev\"",
    "electron-dev": "NODE_ENV=development electron .",
    "react-dev": "vite",
    "build:react": "vite build",
    "build:electron": "electron-builder",
    "build": "npm run build:react && npm run build:electron"
  },
  "dependencies": {
    "@lmstudio/sdk": "^1.1.1",
    "axios": "^1.6.8",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^8.0.7",
    "screenshot-desktop": "^1.14.0",
    "sharp": "^0.34.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "electron": "^29.4.6",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1",
    "vite": "^6.3.4"
  },
  "build": {
    "appId": "com.yourdomain.screenshot-sender",
    "mac": {
      "icon": "assets/LM_Screenshot.png"
    },
    "win": {
      "icon": "assets/LM_Screenshot.png"
    },
    "linux": {
      "icon": "assets/LM_Screenshot.png"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "server.js",
      "screenshot-send.js",
      "node_modules/**/*",
      "package.json"
    ]
  }
}
